{
  "name": "eslint-plugin-ngx",
  "version": "0.0.0",
  "description": "ESLint rules for Angular projects.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sushant-kum/eslint-plugin-ngx.git"
  },
  "keywords": [
    "ESLint",
    "Lint",
    "Angular",
    "Plugin"
  ],
  "author": "Sushant Kumar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sushant-kum/eslint-plugin-ngx/issues"
  },
  "homepage": "https://github.com/sushant-kum/eslint-plugin-ngx#readme",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint ./**/*.js",
    "lint:fix": "eslint --fix ./**/*.js",
    "format": "prettier ./**/*.{js,json,md}",
    "format:fix": "prettier --write ./**/*.{js,json,md}",
    "format:check": "prettier --check ./**/*.{js,json,md}",
    "pack": "npm pack",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@commitlint/cz-commitlint": "^17.6.7",
    "commitizen": "^4.3.0",
    "eslint": "^8.46.0",
    "eslint-cli": "^1.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3"
  },
  "peerDependencies": {
    "@angular-eslint/builder": "^16.1.0",
    "@angular-eslint/eslint-plugin": "^16.1.0",
    "@angular-eslint/eslint-plugin-template": "^16.1.0",
    "@angular-eslint/schematics": "^16.1.0",
    "@angular-eslint/template-parser": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.4",
    "eslint-plugin-deprecation": "^1.5.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-unused-imports": "^3.0.0"
  }
}
