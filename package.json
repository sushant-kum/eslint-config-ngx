{
  "name": "eslint-config-ngx",
  "version": "1.0.0",
  "description": "ESLint rules for Angular projects.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sushant-kum/eslint-config-ngx.git"
  },
  "keywords": [
    "ESLint",
    "ESLint Config",
    "eslint-config",
    "Lint",
    "Angular",
    "Config"
  ],
  "author": "Sushant Kumar <sushant.kum96@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sushant-kum/eslint-config-ngx/issues"
  },
  "homepage": "https://github.com/sushant-kum/eslint-config-ngx#readme",
  "scripts": {
    "prepare": "husky install",
    "version": "npm run tool:changelog && git add CHANGELOG.md package.json package-lock.json",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint --fix \"**/*.js\"",
    "format": "prettier \"**/*.{js,json,md,yaml,yml}\"",
    "format:fix": "prettier --write \"**/*.{js,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yaml,yml}\"",
    "pack": "npm pack",
    "tool:commit": "cz",
    "tool:changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "8.47.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2"
  },
  "peerDependencies": {
    "@angular-eslint/builder": "^16.1.0",
    "@angular-eslint/eslint-plugin": "^16.1.0",
    "@angular-eslint/eslint-plugin-template": "^16.1.0",
    "@angular-eslint/schematics": "^16.1.0",
    "@angular-eslint/template-parser": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-cypress": "^2.14.0",
    "eslint-plugin-deprecation": "^1.5.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.1"
  }
}
